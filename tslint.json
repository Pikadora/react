{
    "enable": true,
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
             "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rules": {
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "ordered-imports": [
            false
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "no-console": false,
        "object-literal-sort-keys": false
    }
}